{% extends 'base.html.twig' %}

{% block main %}
<h1 class="text-center">Alternatum</h1>
<h4 class="text-center">Please select a building</h4>
<div class="col-xs-12">
    {% for building in buildings_assigned %}
        <div class="col-xs-12 col-sm-4 col-md-3 mar-top-30">
            <a href="{{path('log_building', {building_id: building.id, building_name: building.building})}}">
                <div class="col-xs-12" style="border: 1px solid #999; border-radius: 5px;">
                    <h2 class="text-center">{{building.building}}</h2>
                </div>
            </a>
        </div>
    {% endfor %}
</div>
{% endblock %}
